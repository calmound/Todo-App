// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?

  date        String?     // 'YYYY-MM-DD'
  // 跨日任务：开始/结束日期（闭区间），格式 'YYYY-MM-DD'
  rangeStart  String?
  rangeEnd    String?
  allDay      Boolean     @default(false)
  startTime   String?     // 'HH:mm'
  endTime     String?     // 'HH:mm'

  status      TaskStatus  @default(pending)
  quadrant    Quadrant    @default(IN)

  // 标签（多选）
  categories  String?     // JSON 存储的标签数组，如 '["工作","学习"]'

  // 时间统计
  dueAt       DateTime?   // 预计/期望/计划的完成时间（Deadline）
  completedAt DateTime?   // 任务实际完成的时间

  // 子任务支持
  parentId    Int?        // 父任务ID，null 表示主任务
  order       Int         @default(0) // 排序字段（同一层级内）
  parent      Task?       @relation("TaskToSubtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks    Task[]      @relation("TaskToSubtasks")

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([date])
  @@index([rangeStart])
  @@index([rangeEnd])
  @@index([parentId])
}

// 任务状态
enum TaskStatus {
  pending   // 待办
  done      // 已完成
  abandoned // 已放弃
}

// 任务四象限
enum Quadrant {
  IU // 重要紧急
  IN // 重要不紧急
  NU // 不重要紧急
  NN // 不重要不紧急
}
